<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderDetailOnClick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"

    android:background="#FCFCE1"
    android:fadeScrollbars="true"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:padding="5sp"
    tools:context=".OrderPage">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:id="@+id/tvStatusLabel_Ordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#00FAD7D7"
                android:gravity="center"
                android:text="Order Status: "
                android:textColor="#680606"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/amarante" />

            <TextView
                android:id="@+id/tvFoodStatus_Ordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#00FAD7D7"
                android:gravity="center"
                android:text=""
                android:textColor="#F4511E"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/amarante" />

</LinearLayout>

            <ImageView
                android:id="@+id/ivFoodImage_Ordered"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/sunset" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFoodNameLabel_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:text="Food"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/cagliostro" />

                    <TextView
                        android:id="@+id/tvFoodName_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="2"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStdPriceLabel_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:text="Price Per Kg."
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/cagliostro" />

                    <TextView
                        android:id="@+id/tvStdPrice_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="2"
                        android:padding="5sp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvQuantityLabel_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:text="Quantity(kg)"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/cagliostro" />

                    <TextView
                        android:id="@+id/tvQuantity_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="2"
                        android:inputType="numberSigned|numberDecimal"
                        android:padding="5sp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAddressLabel_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:text="Address"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/cagliostro" />

                    <TextView
                        android:id="@+id/tvAddress_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="2"
                        android:inputType="textMultiLine|textPostalAddress"
                        android:padding="5sp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="15sp" />


                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--android:id="@+id/tvTaxesLabel_Ordered"-->
                        <!--android:layout_width="0sp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="10sp"-->
                        <!--android:layout_marginRight="10sp"-->
                        <!--android:layout_marginBottom="10sp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:padding="5sp"-->
                        <!--android:text="Taxes"-->
                        <!--android:textColor="#000"-->
                        <!--android:textSize="15sp"-->
                        <!--android:textStyle="bold"-->
                        <!--app:fontFamily="@font/cagliostro" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/tvTaxes_Ordered"-->
                        <!--android:layout_width="0sp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="10sp"-->
                        <!--android:layout_marginRight="10sp"-->
                        <!--android:layout_marginBottom="10sp"-->
                        <!--android:layout_weight="2"-->
                        <!--android:padding="5sp"-->
                        <!--android:text=""-->
                        <!--android:textColor="#000"-->
                        <!--android:textSize="15sp" />-->

                <!--</LinearLayout>-->

                <!--horizontal line-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTotalLabel_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="4"
                        android:padding="5sp"
                        android:text="Total(Incl. of all taxes)"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/carter_one" />

                    <TextView
                        android:id="@+id/tvTotal_Ordered"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="2"
                        android:padding="5sp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="20sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/btnCancelOrder_Ordered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="#EC3939"
                    android:padding="10sp"
                    android:text="Cancel This Order"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>